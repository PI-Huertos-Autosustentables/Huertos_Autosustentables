@model Huertos_Autosustentables.Models.TipoCultivo

@{
    ViewData["Title"] = "Edit";
}
<div class="m-5">
    <h4 class="text-center">Estas editanto un tipo de cultivo</h4>
    <hr />
    <form asp-action="Edit">
        <div class="row">
            <div class="col-lg-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdTipoCultivo" />
                <div class="form-group">
                    <label asp-for="NombreTipoCultivos" class="control-label"></label>
                    <input asp-for="NombreTipoCultivos" class="form-control" />
                    <span asp-validation-for="NombreTipoCultivos" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CaracteristicasTipoCultivos" class="control-label"></label>
                    <textarea asp-for="CaracteristicasTipoCultivos" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="CaracteristicasTipoCultivos" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="form-group col-lg-12 h-25">
                <div>
                    Imagen Cargada :
                </div>
                <div class="col-lg-12 h-25">
                    <img src="@("/img/tipo/" + Model.ImageName)" asp-append-version="true" class="w-25 h-25" />
                </div>
                <div class="form-group d-none">
                    <label asp-for="ImageName" class="control-label"></label>
                    <input asp-for="ImageName" class="form-control" />
                    <span asp-validation-for="ImageName" class="text-danger"></span>
                </div>
                <br /><br />
                <div class="form-group col-lg-12">
                    <input class="btn btn-primary" type="submit" value="Guardar"  />
                </div>
            </div>          
        </div>
    </form>
    <div>
        <a class="btn btn-info" asp-action="Index">Regresar a la lista</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
