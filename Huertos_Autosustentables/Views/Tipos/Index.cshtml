@model IEnumerable<Huertos_Autosustentables.Models.TipoCultivo>

@{
    ViewData["Title"] = "Index";
}
<div class="m-5">
    <h4>Registro de tipos de cultivos</h4>
    <p>
        <a asp-action="Create">Agregar un nuevo tipo de cultivo</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreTipoCultivos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CaracteristicasTipoCultivos)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.ImageFile)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreTipoCultivos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CaracteristicasTipoCultivos)
                    </td>
                    <td>
                        <img src="@("/img/tipo/" + item.ImageName)" asp-append-version="true" class="rounded" width="25" height="25" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdTipoCultivo">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.IdTipoCultivo">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdTipoCultivo">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
