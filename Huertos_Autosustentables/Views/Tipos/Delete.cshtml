@model Huertos_Autosustentables.Models.TipoCultivo

@{
    ViewData["Title"] = "Delete";
}
<div class="m-5">
    <h4 class="text-center">Estas seguro que quieres borrar @Html.DisplayFor(model => model.NombreTipoCultivos) </h4>
    <hr />
    <div class="row">
        <dl class="col-lg-6">
            <dt>
                @Html.DisplayNameFor(model => model.NombreTipoCultivos)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NombreTipoCultivos)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CaracteristicasTipoCultivos)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CaracteristicasTipoCultivos)
            </dd>
        </dl>
        <dl class="col-lg-6">
            <dd class="font-weight-bold">
            Imagen Cargada :
            </dd>
            <dt class="w-100">
                <img src="@("/img/tipo/" + Model.ImageName)" asp-append-version="true" class="w-50 h-50" />
            </dt>
        </dl>
        <form  asp-action="Delete">
            <input type="hidden" asp-for="IdTipoCultivo" />
            <input class="btn btn-danger text-center" type="submit" value="Borrar"/> |
            <a  class="btn btn-info text-center" asp-action="Index">Regresar a la lista</a>
        </form>
    </div>
</div>
