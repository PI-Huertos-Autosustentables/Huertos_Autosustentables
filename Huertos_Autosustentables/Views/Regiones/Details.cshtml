@model Huertos_Autosustentables.Models.Region

@{
    ViewData["Title"] = "Details";
}
<div class="m-5">
    <h4 class="text-center">Detalles de la región @Html.DisplayFor(model => model.NombreRegiones)</h4>
    <hr />
    <div class="row">
        <dl class="col-lg-4">
            <dt>
                @Html.DisplayNameFor(model => model.NombreRegiones)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NombreRegiones)
            </dd>
        </dl>
        <dl class="col-lg-4">
            <dt>
                @Html.DisplayNameFor(model => model.IdClima)
            </dt>
            <dd>
                <p class="d-none">@Html.DisplayFor(model => model.IdClima)</p>
                <select class="form-control reset inputt drop " disabled="disabled" style="background-color: transparent; border:none; -webkit-appearance: none" asp-for="IdClima" asp-items="ViewBag.IdClima"></select>
            </dd>
        </dl>
        <dl class="col-lg-4">
            <dt>
                @Html.DisplayNameFor(model => model.CaracterisitcasRegiones)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CaracterisitcasRegiones)
            </dd>
        </dl>
    </div>
    <hr />
    <div class="row text-center">
        <dl class="col-lg-12">
            <dd class="font-weight-bold">
                Imagen Cargada :
            </dd>
            <dt class="w-100">
                <img src="@("/img/region/" + Model.ImageName)" asp-append-version="true" class="w-25 h-25" />
            </dt>
        </dl>
    </div>
    <hr />
    <div class="text-center">
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.IdRegiones">Editar</a> |
        <a class="btn btn-info" asp-action="Index">Regresar a la lista</a>
    </div>
</div>
