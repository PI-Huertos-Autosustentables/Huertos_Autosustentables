@model Huertos_Autosustentables.Models.Region

@{
    ViewData["Title"] = "Details";
}
<div class="m-5">
    <h4>Detalles de la región @Html.DisplayFor(model => model.NombreRegiones)</h4>
    <hr />
    <div class="row">
        <dl class="col-lg-4">
            <dt>
                @Html.DisplayNameFor(model => model.NombreRegiones)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NombreRegiones)
            </dd>
        </dl>
        <dl class="col-lg-4">
            <dt>
                @Html.DisplayNameFor(model => model.IdClima)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IdClima)
            </dd>
        </dl>
        <dl class="col-lg-4">
            <dt>
                @Html.DisplayNameFor(model => model.CaracterisitcasRegiones)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CaracterisitcasRegiones)
            </dd>
        </dl>
    </div>
    <hr />
    <div class="row">
        <dl class="col-lg-12">
            <dd class="font-weight-bold">
                Imagen Cargada :
            </dd>
            <dt class="w-100">
                <img src="@("/img/region/" + Model.ImageName)" asp-append-version="true" class="w-25 h-25" />
            </dt>
        </dl>
    </div>   
    <hr />
    <div>
        <a asp-action="Edit" asp-route-id="@Model.IdRegiones">Editar</a> |
        <a asp-action="Index">Regresar a la lista</a>
    </div>
</div>
