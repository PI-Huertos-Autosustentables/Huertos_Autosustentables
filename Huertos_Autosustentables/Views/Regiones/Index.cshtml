@model IEnumerable<Huertos_Autosustentables.Models.Region>

@{
    ViewData["Title"] = "Index";
}

<div class="m-5">
    <h3 class="text-center">Regiones</h3>
    <p>
        <a class="btn btn-success" asp-action="Create">Agregar una nueva Región</a>
    </p>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-sm-6 col-12 w-25 mx-auto rounded shadow p-3 rounded bg-light">
                    <div class="panel">
                        <div class="panel-heading "><h4 class="text-center">@item.NombreRegiones</h4></div>
                        <div class="panel-body">
                            <img id="imagen-region" src="@("/img/region/" + item.ImageName)" asp-append-version="true" class="img-responsive rounded-pill" width="250" height="200" />
                            <p class="text-justify">@item.CaracterisitcasRegiones</p>
                            <p class="text-justify">@item.IdClima</p>
                            <a class="btn btn-warning"  asp-action="Edit" asp-route-id="@item.IdRegiones">Editar</a> |
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.IdRegiones">Detalles</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdRegiones">Borrar</a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>