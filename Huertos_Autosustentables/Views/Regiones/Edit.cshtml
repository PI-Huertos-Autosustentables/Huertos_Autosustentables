@model Huertos_Autosustentables.Models.Region

@{
    ViewData["Title"] = "Edit";
}
<div class="m-5">
    <h4>Estas editando una región</h4>
    <hr />
    <form asp-action="Edit">
        <div class="form-row">
            <div class="form-group col-lg-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdRegiones" />
                <div class="form-group">
                    <label asp-for="NombreRegiones" class="control-label"></label>
                    <input asp-for="NombreRegiones" class="form-control" />
                    <span asp-validation-for="NombreRegiones" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-lg-4">
                <div class="form-group">
                    <label asp-for="IdClima" class="control-label"></label>
                    <input asp-for="IdClima" class="form-control" />
                    <span asp-validation-for="IdClima" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-lg-4">
                <div class="form-group">
                    <label asp-for="CaracterisitcasRegiones" class="control-label"></label>
                    <input asp-for="CaracterisitcasRegiones" class="form-control" />
                    <span asp-validation-for="CaracterisitcasRegiones" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <div class="form-row">
            <div class="form-group col h-50">
                <div>
                    Imagen Cargada :
                </div>
                <div class="col-lg-12 h-50">
                    <img src="@("/img/region/" + Model.ImageName)" asp-append-version="true" class="w-25 h-25" />
                </div>
                <div class="form-group d-none">
                    <label asp-for="ImageName" class="control-label"></label>
                    <input asp-for="ImageName" class="form-control" />
                    <span asp-validation-for="ImageName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-12">
                    <input class="btn btn-primary" type="submit" value="Guardar" />
                </div>
            </div>class="btn btn-info"
        </div>
    </form>
    <hr />
    <div>
        <a class="btn btn-info" asp-action="Index">Regresar a la lista</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
