@model Huertos_Autosustentables.Models.Cultivo

@{
    ViewData["Title"] = "Edit";
}
<div class="m-5">
    <h4>Estas editando un cultivo</h4>
    <hr />
    <form asp-action="Edit">
        <div class="form-row">
            <div class="form-group col-lg-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdCultivos" />
                <div>
                    <label asp-for="NombreCultivos" class="control-label"></label>
                    <input asp-for="NombreCultivos" class="form-control" />
                    <span asp-validation-for="NombreCultivos" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-lg-4">
                <div>
                    <label asp-for="IdTipoCultivo" class="control-label"></label>
                    <input asp-for="IdTipoCultivo" class="form-control" />
                    <span asp-validation-for="IdTipoCultivo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-lg-4">
                <div>
                    <label asp-for="IdRegiones" class="control-label"></label>
                    <input asp-for="IdRegiones" class="form-control" />
                    <span asp-validation-for="IdRegiones" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-lg-4">
                <div>
                    <label asp-for="IntroduccionCultivos" class="control-label"></label>
                    <textarea asp-for="IntroduccionCultivos" class="form-control"></textarea>
                    <span asp-validation-for="IntroduccionCultivos" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-lg-4">
                <div>
                    <label asp-for="CuerpoCultivos" class="control-label"></label>
                    <textarea asp-for="CuerpoCultivos" class="form-control"></textarea>
                    <span asp-validation-for="CuerpoCultivos" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-lg-4">
                <div>
                    <label asp-for="RecomendacionesCultivos" class="control-label"></label>
                    <textarea asp-for="RecomendacionesCultivos" class="form-control"></textarea>
                    <span asp-validation-for="RecomendacionesCultivos" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <div class="form-row">
            <div class="form-group col h-25">
                <div>
                    Imagen Cargada:
                </div>
                <div class="col-lg-12 h-25">
                    <img src="@("/img/cultivo/" + Model.ImageName)" asp-append-version="true" class="w-25 h-25" />
                </div>
            </div>
            <div class="form-group col-lg-12 h-25">
                <div class="form-group col-lg-12">
                    <input type="submit" value="Guardar" />
                </div>
            </div>
        </div>
    </form>
    <hr />
    <div>
        <a asp-action="Index">Regresar a la lista</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
