@model Huertos_Autosustentables.Models.Cultivo

@{
    ViewData["Title"] = "Details";
}

<div class="m-5">
    <h4 class="text-center">Detalles @Html.DisplayFor(model => model.NombreCultivos)</h4>
    <hr />
    <div class="row">
        <dl class="col-lg-4">
            <dt>
                @Html.DisplayNameFor(model => model.NombreCultivos)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NombreCultivos)
            </dd>
        </dl>
        <dl class="col-lg-4">
            <dt>
                @Html.DisplayNameFor(model => model.IdTipoCultivo)
            </dt>
            <dd>
                <select class="form-control reset inputt drop " disabled="disabled" style="background-color: transparent; border:none; -webkit-appearance: none" asp-for="IdTipoCultivo" asp-items="ViewBag.IdTipoCultivo"></select>
            </dd>
        </dl>
        <dl class="col-lg-4">
            <dt>
                @Html.DisplayNameFor(model => model.IdRegiones)
            </dt>
            <dd>
                <select class="form-control reset inputt drop " disabled="disabled" style="background-color: transparent; border:none; -webkit-appearance: none" asp-for="IdRegiones" asp-items="ViewBag.IdRegiones"></select>
            </dd>
        </dl>
    </div>
    <hr />
    <div class="row">
        <dl class="col-lg-4">
            <dt>
                @Html.DisplayNameFor(model => model.IntroduccionCultivos)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IntroduccionCultivos)
            </dd>
        </dl>
        <dl class="col-lg-4">
            <dt>
                @Html.DisplayNameFor(model => model.CuerpoCultivos)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CuerpoCultivos)
            </dd>
        </dl>
        <dl class="col-lg-4">
            <dt>
                @Html.DisplayNameFor(model => model.RecomendacionesCultivos)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.RecomendacionesCultivos)
            </dd>
        </dl>
    </div>
    <hr />
    <div class="row text-center">
        <dl class="col-lg-12">
            <dt class="font-weight-bold">
                Imagen Cargada :
            </dt>
            <dd class="w-100">
                <img src="@("/img/cultivo/" + Model.ImageName)" asp-append-version="true" class="w-25 h-25" />
            </dd>
        </dl>
    </div>
    <hr />
    <div class="text-center">
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.IdCultivos">Editar</a> |
        <a class="btn btn-info" asp-action="Index">Regresar a la lista</a>
    </div>
</div>

