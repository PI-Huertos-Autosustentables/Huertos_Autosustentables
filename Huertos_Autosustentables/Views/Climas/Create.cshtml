@model Huertos_Autosustentables.Models.Clima

@{
    ViewData["Title"] = "Create";
}
<div class="m-5">
    <h3>Formulario para crear un nuevo clima</h3>
    <hr />
    <form asp-action="Create" enctype="multipart/form-data" method="post">
        <div class="form-row">
            <div class="form-group col-lg-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NombreClima" class="control-label"></label>
                    <input asp-for="NombreClima" class="form-control" />
                    <span asp-validation-for="NombreClima" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-lg-6">
                <label asp-for="CaracteristicasClima" class="control-label"></label>
                <textarea asp-for="CaracteristicasClima" class="form-control"></textarea>
                <span asp-validation-for="CaracteristicasClima" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group custom-file col-lg-6">
                <input class="form-control custom-file-input" asp-for="ImageFile" accept="image/*" />
                <label class="custom-file-label">Elegir Imagen</label>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <br /><br />
            <div class="form-group col-lg-12">
                <input type="submit" value="Crear" />
            </div>
        </div>
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}