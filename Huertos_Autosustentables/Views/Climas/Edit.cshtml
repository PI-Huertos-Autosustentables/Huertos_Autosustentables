@model Huertos_Autosustentables.Models.Clima

@{
    ViewData["Title"] = "Edit";
}
<div class="m-5">

<h4>Estas editando un clima</h4>
    <hr />
    <form asp-action="Edit" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="form-group col-lg-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdClima" />
                <div class="form-group ">
                    <label asp-for="NombreClima" class="control-label"></label>
                    <input asp-for="NombreClima" class="form-control" />
                    <span asp-validation-for="NombreClima" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="CaracteristicasClima" class="control-label"></label>
                    <textarea asp-for="CaracteristicasClima" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="CaracteristicasClima" class="text-danger"></span>
                </div>
        </div>
    </div>
     <hr />
    <div class="row">
        <div class="form-group  col-lg-12 h-25">
            <div>
                Cargar Imagen :
            </div>
            <div class="col-lg-12 h-25">
                <img src="@("/img/climas/" + Model.ImageName)" asp-append-version="true" class="w-25 h-25" />
            </div>
            <div class="form-group d-none">
                <label asp-for="ImageName" class="control-label"></label>
                <input asp-for="ImageName" class="form-control" />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group col-lg-12">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
    </form>
    <hr />
    <div>
        <a asp-action="Index">Regresar a la lista</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>
