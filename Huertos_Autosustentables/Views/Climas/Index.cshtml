@model IEnumerable<Huertos_Autosustentables.Models.Clima>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreClima)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaracteristicasClima)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ImageFile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreClima)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaracteristicasClima)
            </td>
            <td>
                <img src="@("/img/clima/" + item.ImageName)" asp-append-version="true" class="rounded" width="25" height="25" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdClima">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdClima">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdClima">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
