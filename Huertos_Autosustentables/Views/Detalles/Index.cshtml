@model IEnumerable<Huertos_Autosustentables.Models.DetalleUsersCultivo>

@{
    ViewData["Title"] = "Index";
}
<div class="m-5">
    <h3 class="text-center">Cultivo</h3>

    <p>
        <a class="btn btn-success" asp-action="Create">Agregar datos extra</a>
    </p>
    <div style="position:relative; height: 375px; overflow: auto; display:block">

    <table class="table table-hover  bg-light text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdCultivo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MetrosCuadradosDetalle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrecioSemillasDetalle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LugarCultivoDetalle)
                </th>
                <th>Editar</th>
                <th>Detalle</th>
                <th>Borrar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <select asp-for="@item.IdCultivo" disabled="disabled" style="background-color: transparent; border:none; -webkit-appearance: none; color:black" asp-items="ViewBag.IdCultivo"></select>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MetrosCuadradosDetalle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioSemillasDetalle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LugarCultivoDetalle)
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdDetalle">Editar</a> 
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.IdDetalle">Detalles</a> 
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdDetalle">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>
